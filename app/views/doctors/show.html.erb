<h1>Doctor's <%= "#{@doctor.first_name} #{@doctor.last_name}" %> Personal Page</h1>

<!-- doctor's avatar -->
<p><%= @rating %></p>
<p><%= @doctor.about %></p>
<ul>
  <% @specializations.each do |specialization| %>
      <li><%= specialization %></li>
  <% end %>
</ul>

<hr>

<ul>
  <% @reviews.each do |review| %>
    <li>
      <!-- user avatar -->
      <p><%= review.rating %></p>
      <p><%= review.date %></p>
      <p><%= review.content %></p>
    </li>
  <% end %>
</ul>

<hr>

<ul>
  <% @articles.each do |article| %>
    <li>
      <h2><%= article.title %></h2>
      <p><%= article.content %></p>
    </li>
  <% end %>
</ul>
