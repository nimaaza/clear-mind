<h1>List of available specialists</h1>


<% @doctors.each do |doctor_hash| %>
  <% doctor = doctor_hash[:doctor] %>
  <% specializations = doctor_hash[:specializations] %>
  <% rating = doctor_hash[:rating] %>

  <div class="container">
    <div class="doctor-card-index">

      <%= link_to doctor_path(doctor), class: 'doctor-card-index-link' do %>
        <span></span>
      <% end %>
      <div class="doctor-card-avatar-rating-index">
        <% if doctor.avatar.attached? %>
          <%= cl_image_tag doctor.avatar.key, height: 40, width: 40, crop: :fill %>
        <% end %>
        <h4><%= "#{'ðŸ˜‡' * rating}#{rating.to_i == rating ? '' : 'ðŸ˜Œ'}" %></h4>

      </div>
      <div class="doctor-card-infos-index">
        <h2>About Dr. <%= "#{doctor.first_name} #{doctor.last_name}" %></h2>
        <p><%= doctor.about %></p>
        <h3 class="mt-4">Specializations:</h3>
        <ul>
          <% specializations.each do |specialization| %>
            <li><%= specialization %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>












